{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\ApplicationContext #}
{# @var property \EasyCorp\Bundle\EasyAdminBundle\Dto\PropertyDto #}
{% if ea.crud.action == 'detail' %}
    {{ property.value }}
{% else %}
    {% set html_id = 'ea-text-editor-' ~ property.uniqueId %}
    <a href="#" data-toggle="modal" data-target="#{{ html_id }}">
        <i class="far fa-file-alt"></i> {{ 'property.text_editor.view_content'|trans([], domain = 'EasyAdminBundle') }}
    </a>

    <div class="modal fade" id="{{ html_id }}" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{ property.label }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'action.close'|trans([], domain = 'EasyAdminBundle') }}">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ property.value }}
                </div>
            </div>
        </div>
    </div>
{% endif %}
