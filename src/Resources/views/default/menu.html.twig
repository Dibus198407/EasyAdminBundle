{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\ApplicationContext #}
{% macro render_menu_item(item) %}
    {% if item.isMenuSection %}
        <span class="{{ item.cssClass }}">{{ item.label }}</span>
    {% else %}
        <a href="{{ item.linkUrl }}" class="{{ item.cssClass }}" target="{{ item.linkTarget }}" rel="{{ item.linkRel }}" referrerpolicy="origin-when-cross-origin">
            {% if item.icon is not empty %}<i class="fa fa-fw {{ item.icon }}"></i>{% endif %}
            <span>{{ item.label }}</span>
            {% if item.hasSubItems %}<i class="fa fa-fw fa-angle-right treeview-icon"></i>{% endif %}
        </a>
    {% endif %}
{% endmacro %}

{% block main_menu_before %}{% endblock %}

<ul class="sidebar-menu" data-widget="tree" data-animation-speed="250">
    {% block main_menu %}
        {% for item in ea.menu %}
            {% block menu_item %}
                <li class="{{ item.isMenuSection ? 'header' }} {{ item.hasSubItems ? 'treeview' }} {{ item.isSelected(ea.selectedMenuIndex) ? 'active' }} {{ item.isExpanded(ea.selectedMenuIndex, ea.selectedSubMenuIndex) ? 'submenu-active' }}">
                    {{ _self.render_menu_item(item) }}

                    {% if item.hasSubItems %}
                        <ul class="treeview-menu">
                            {% for subItem in item.subItems %}
                                {% block menu_subitem %}
                                    <li class="{{ subItem.isMenuSection ? 'header' }} {{ subItem.isSelected(ea.selectedMenuIndex, ea.selectedSubMenuIndex) ? 'active' }}">
                                        {{ _self.render_menu_item(subItem) }}
                                    </li>
                                {% endblock menu_subitem %}
                            {% endfor %}
                        </ul>
                    {% endif %}
                </li>
            {% endblock menu_item %}
        {% endfor %}
    {% endblock main_menu %}
</ul>

{% block main_menu_after %}{% endblock %}
