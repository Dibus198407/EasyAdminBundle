{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\ApplicationContext #}
<a class="{{ is_dropdown|default(false) ? 'dropdown-item' }} {{ action.css_class|default('') }}" title="{{ action.title|default('') is empty ? '' : action.title|trans(ea.transParameters, ea.config.translationDomain) }}" href="{{ action_href }}" target="{{ action.target }}">
    {%- if action.icon %}<i class="fa fa-fw fa-{{ action.icon }}"></i> {% endif -%}
    {%- if action.label is defined and not action.label is empty -%}
        {{ action.label|trans(arguments = ea.transParameters|merge({ '%entity_id%': ea.entityConfig.id }), domain = ea.config.translationDomain) }}
    {%- endif -%}
</a>
